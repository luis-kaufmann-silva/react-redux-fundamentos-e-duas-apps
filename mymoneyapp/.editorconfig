# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# NÃ£o alterar arquivos minificados
[**.min.{js,css,json}]
indent_style = ignore
insert_final_newline = ignore
trim_trailing_whitespace = ignore

[*.json]
insert_final_newline = ignore
